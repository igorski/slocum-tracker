<header id="header">
    <nav id="menu">
        <div class="toggle">
            <span>&#9776;</span>
        </div>
        <h1>Slocum Tracker</h1>
        <section id="songSection"></section>
    </nav>
</header>

<div id="main">
    <section id="metaSection"></section>
    <section id="patternSection">
        <h2>Pattern editor</h2>
        <ul id="patternMenu">
            <li>
                <button id="patternClear">clear</button>
            </li>
            <li>
                <button id="patternCopy">copy</button>
            </li>
            <li>
                <button id="patternPaste">paste</button>
            </li>
            <li>
                <button id="patternAdd">add</button>
            </li>
            <li>
                <button id="patternDelete">delete</button>
            </li>
            <li>
                <select id="patternSteps">
                    <option value="16">16 steps</option>
                    <option value="32">32 steps</option>
                </select>
            </li>
        </ul>
        <ul id="patternNav">
            <li>
                Editing pattern
            </li>
            <li id="patternBack">
                <<
            </li>
            <li id="currentPattern">
                <input class="current" value="1" maxlength="3">
                <span class="divider">/</span>
                <span class="total">1</span>
            </li>
            <li id="patternNext">
                >>
            </li>
        </ul>
    </section>
    <div id="center">
        <section id="patternEditor">
            <section id="patternAttenuation">
                <label for="channel1attenuation">Channel 1</label>
                <select id="channel1attenuation">
                    <option value="false">Full volume</option>
                    <option value="true">Attenuated</option>
                </select>
                <label for="channel1attenuation">Channel 2</label>
                <select id="channel2attenuation">
                    <option value="false">Full volume</option>
                    <option value="true">Attenuated</option>
                </select>
            </section>
            <!-- additional views added through HandleBars -->
            <section id="patternContainer"><!-- x --></section>
        </section>
        <section id="helpSection"><!-- x --></section>
    </div>
    <section id="hatSection"><!-- x --></section>
</div>

